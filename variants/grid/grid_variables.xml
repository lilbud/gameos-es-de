<theme>
    <aspectRatio name="4:3, 16:9">
        <view name="gamelist">
            <text name="md_lbl_rating">
                <text>${langLabelRating}</text>
            </text>
    
            <text name="md_rating">
                <metadata>rating</metadata>
            </text>
    
            <text name="md_lbl_players">
                <text>${langLabelPlayers}</text> 
            </text>
    
            <text name="md_players">
                <metadata>players</metadata>
            </text>
    
            <text name="md_lbl_genre">
                <text>${langLabelGenre}</text>
            </text>
    
            <text name="md_genre">
                <metadata>genre</metadata>
                <size>0.135 0.036</size>
            </text>
    
            <image name="background">
                <path>./../../assets/img/box.png</path>
                <color>${carouselBackgroundColor}</color>
                <pos>0 0</pos>
                <size>1 1</size>
                <zIndex>0</zIndex>
            </image>

            <grid name="systemCarousel">
                <fractionalRows>true</fractionalRows>
            </grid>
        </view>
    </aspectRatio>

    <aspectRatio name="4:3">
        <variables>
            <mdLblRatingPos>0.5 0.03</mdLblRatingPos>
            <mdRatingPos>0.57 0.03</mdRatingPos>
            <mdLblPlayersPos>0.615 0.03</mdLblPlayersPos>
            <mdPlayersPos>0.69 0.03</mdPlayersPos>
            <mdLblGenrePos>0.75 0.03</mdLblGenrePos>
            <mdGenrePos>0.82 0.03</mdGenrePos>
        </variables>

        <view name="gamelist">
            <text name="md_lbl_rating">
                <pos>${mdLblRatingPos}</pos>
            </text>

            <text name="md_rating">
                <pos>${mdRatingPos}</pos>
            </text>

            <text name="md_lbl_players">
                <pos>${mdLblPlayersPos}</pos>
            </text>

            <text name="md_players">
                <pos>${mdPlayersPos}</pos>
            </text>

            <text name="md_lbl_genre">
                <pos>${mdLblGenrePos}</pos>
            </text>

            <text name="md_genre">
                <pos>${mdGenrePos}</pos>
            </text>
        </view>
    </aspectRatio>

    <aspectRatio name="16:9">
        <variables>
            <mdLblRatingPos>0.6 0.03</mdLblRatingPos>
            <mdRatingPos>0.655 0.03</mdRatingPos>
            <mdLblPlayersPos>0.705 0.03</mdLblPlayersPos>
            <mdPlayersPos>0.765 0.03</mdPlayersPos>
            <mdLblGenrePos>0.81 0.03</mdLblGenrePos>
            <mdGenrePos>0.86 0.03</mdGenrePos>
        </variables>
    
        <view name="gamelist">
            <text name="md_lbl_rating">
                <pos>${mdLblRatingPos}</pos>
            </text>

            <text name="md_rating">
                <pos>${mdRatingPos}</pos>
            </text>

            <text name="md_lbl_players">
                <pos>${mdLblPlayersPos}</pos>
            </text>

            <text name="md_players">
                <pos>${mdPlayersPos}</pos>
            </text>

            <text name="md_lbl_genre">
                <pos>${mdLblGenrePos}</pos>
            </text>

            <text name="md_genre">
                <pos>${mdGenrePos}</pos>
            </text>
        </view>
    </aspectRatio> 
</theme>